<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context-4.0.xsd">
    <context:component-scan base-package="com.stanislav.berdnik"/>

    <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="locations">
            <list>
                <value>file:${settings_path_for_creator}</value>
            </list>
        </property>
        <property name="ignoreUnresolvablePlaceholders" value="true"/>
    </bean>

    <bean id="changeableBean" class="com.stanislav.berdnik.bean.ChangeableBean">
        <property name="changeableValue" value="${changeableValue.prop}"/>
    </bean>

    <bean id="unchangeableBean" class="com.stanislav.berdnik.bean.UnchangeableBean">
        <property name="unchangeableValue" value="${unchangeableValue.prop}"/>
    </bean>

    <bean id="classForAutowiring" class="com.stanislav.berdnik.ClassForAutowiring">
        <property name="changeableBean" ref="changeableBean"/>
        <property name="unchangeableBean" ref="unchangeableBean"/>
    </bean>

</beans>
